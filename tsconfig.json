{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src": [ "src/*" ]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es2020",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": [
      "dom",
      "scripthost",
      "es2020"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/*",
    "src/types",
    "dist"
  ],
}
